{% extends 'navbar/user_navbar.html.twig' %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css/new_recipe.css') }}"></link>
<form id="contact" >
	<div class="contact-section col span_1_of_3" style="margin-top: 60px; overflow-x:auto;" >
		<div class="container"style="margin-top: 20px;">
			<form action="{{ path('save_recipe') }}" method="post">
			
				<div class="col-md-6 form-line">
					<div class="form-group">
						<label for="title">Recipe Title</label>
						<div class="input-gr">
						<input type="text" class="form-control" id="title" name="title" maxlength="50" placeholder=" Enter Title">
						</div>
					</div>
					<div class="form-group">
						<label for="difficulty">Recipe Difficulty</label>
						<div class="input-gr">
						<input type="text" class="form-control" id="diff" name="diff" maxlength="10" placeholder=" Easy, Medium or Hard ">
						</div>
					</div>
					<div class="form-group">
						<label for="time">Recipe Time</label>
						<div class="input-gr">
						<input type="text" class="form-control" id="time" name="time" maxlength="10" placeholder=" Enter Preparation Time">
						</div>
					</div>
					<div class="form-group">
						<label for="description">Recipe Category</label>
						<div class="input-gr">
						<input type="text" class="form-control" id="categ" maxlength="25" name="categ" placeholder=" First Dish, Second Dish, Side Dish or Dessert ">
						</div>
					</div>	
					<div class="form-group">
						<label for="proceedings">Recipe Proceedings</label>
						<div class="input-gr">
						<textarea type="text" class="form-control" id="descr" name="descr" placeholder=" Explain Proceedings"></textarea>
						</div>
					</div>
				</div>
			
			<div class="col-md-6">
				<div class="control-group" id="fields">
					<div class="controls">
						<form role="form" autocomplete="off">
						<div class="col-md-12 col-md-offset-0">
							<label class="col-xs-7" for="field1">Ingredients</label>
							<label class="col-xs-4" for="field1">Quantity</label>
						</div>
						
						<div class= "box">
						<input id="count-hidden" name="count-hidden" type = "hidden" value = "1">
						<div class="entry col-md-12 col-md-offset-0">
							<div class="input-gr col-xs-7"><input class="form-control" name="ingredient0" id="ingredients" type="text" maxlength="25" placeholder="Ingredient" /></div>
							<div class="input-gr col-xs-4"><input class="form-control" name="quantity0" id="quantities" type="text" maxlength="10" placeholder="Quantity" /></div>
							<span class="input-group-btn">
								<button class="btn btn-success btn-add" type="button">
									<span class="glyphicon glyphicon-plus"></span>
								</button>
							</span>
						</div>
						</div>
					</div>
					<br>
				</div>
			</div>
		</div>
		<div class="btt" style="text-align:center; margin-top: 2%;">
			{#<a href="#" id="flip-btn" class="btn btn-default signup_link" style="margin-right: 5%;">back</a>#}
			<input  type="submit" class="btn btn-primary"></a>
		</div>
	</div>
</form>

</section>



{% endblock %}